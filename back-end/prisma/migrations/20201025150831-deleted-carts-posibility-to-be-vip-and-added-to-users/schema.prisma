datasource db {
  provider = "postgresql"
  url = "***"
}

generator client {
  provider = "prisma-client-js"
}

enum CartType {
  COMMON
  SPECIAL_DATED
}

model Product {
  id        Int             @id @default(autoincrement())
  name      String
  price     Int
  createdAt DateTime        @default(now())
  updatedAt DateTime?
  carts     ProductOnCart[]
}

model User {
  id     Int     @id @default(autoincrement())
  vip    Boolean @default(false)
  name   String
  carts  Cart[]
  orders Order[]
}

model Cart {
  id        Int             @id @default(autoincrement())
  ownerId   Int
  owner     User            @relation(fields: [ownerId], references: [id])
  type      CartType
  createdAt DateTime        @default(now())
  updatedAt DateTime?
  products  ProductOnCart[]
  orders    Order[]
}

model ProductOnCart {
  quantity  Int       @default(1)
  productId Int
  cartId    Int
  product   Product   @relation(fields: [productId], references: [id])
  cart      Cart      @relation(fields: [cartId], references: [id])
  createdAt DateTime  @default(now())
  updatedAt DateTime?

  @@id([cartId, productId])
}

model Order {
  id     Int  @id @default(autoincrement())
  userId Int
  cartId Int
  user   User @relation(fields: [userId], references: [id])
  cart   Cart @relation(fields: [cartId], references: [id])
  total  Int
}
